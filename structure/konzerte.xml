<?xml version="1.0"?>
<bxst:structure xmlns:bxst="http://bitflux.org/structure/1.0">

    <bxst:section name="konzerte" orderby="date ASC" where="date &gt; now()">
        <bxst:table name="konzert" fields="id , date , members , location , city">
            <bxst:table name="band" thatfield="band_id" fields="id , name"/> 
        </bxst:table>
    </bxst:section>

    <bxst:section name="konzerte_old" orderby="date DESC" limit="2" where="date &gt; now()">
        <bxst:table name="konzert" fields="id , date , members , location , city">
            <bxst:table name="band" thatfield="band_id" fields="id , name"/> 
        </bxst:table>
    </bxst:section>

</bxst:structure>
