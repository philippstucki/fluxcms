        <property id="exif_isoSpeedRatings" name="isoSpeedRatings" niceName="isoSpeedRatings" ns="http://www.w3.org/2003/12/exif/ns#">
            <metadata type="text_textfield"/>
            <validate type="nonempty"/>
        </property>
        <property id="exif_make" name="make" niceName="make" ns="http://www.w3.org/2003/12/exif/ns#">
            <metadata type="text_textfield"/>
            <validate type="nonempty"/>
        </property>
        <property id="exif_maxApertureValue" name="maxApertureValue" niceName="maxApertureValue" ns="http://www.w3.org/2003/12/exif/ns#">
            <metadata type="text_textfield"/>
            <validate type="nonempty"/>
        </property>
        <property id="exif_meteringMode" name="meteringMode" niceName="meteringMode" ns="http://www.w3.org/2003/12/exif/ns#">
            <metadata type="text_textfield"/>
