<?xml version="1.0"?>

<bxcms xmlns="http://bitflux.org/propertyconfig">




    <!--
        propertysets define which properties a resource can have.
        the default set is used, when a resource with an undefined set is
        requested. classnames are currently used as the key.
    -->
    <propertysets default="default">


        <propertyset name="image_jpeg">
            <resource name="image/jpeg"/>
            <property id="description-multilang"/>
            <property id="title-multilang"/>
            <property id="mimetype"/>

            <property id="exif_apertureValue"/>
            <property id="exif_exposureMode"/>
            <property id="exif_exposureProgram"/>
            <property id="exif_exposureTime"/>
            <property id="exif_flash"/>
            <property id="exif_flashOnOff"/>
            <property id="exif_fNumber"/>
            <property id="exif_focalLength"/>
            <property id="exif_focalLengthIn35mmFilm"/>
            <property id="exif_imageLength"/>
            <property id="exif_imageWidth"/>
            <property id="exif_isoSpeedRatings"/>
            <property id="exif_make"/>
            <property id="exif_maxApertureValue"/>
            <property id="exif_meteringMode"/>
            <property id="exif_model"/>
            <property id="exif_redEyeOnOff"/>
            <property id="exif_whiteBalance"/>
            <property id="exif_dateTimeOriginal"/>
            <property id="dc_subject"/>

        </propertyset>


    </propertysets>

    <!--
        these are global definitions for properties like name, namespace etc.
        all ids used above refer to these definitions.
    -->
    <properties>


        <property id="exif_apertureValue" name="apertureValue" niceName="apertureValue" ns="http://www.w3.org/2003/12/exif/ns#">
            <metadata type="text_textfield"/>
            <validate type="nonempty"/>
        </property>
        <property id="exif_exposureMode" name="exposureMode" niceName="exposureMode" ns="http://www.w3.org/2003/12/exif/ns#">
            <metadata type="text_textfield"/>
            <validate type="nonempty"/>
        </property>
        <property id="exif_exposureProgram" name="exposureProgram" niceName="exposureProgram" ns="http://www.w3.org/2003/12/exif/ns#">
            <metadata type="text_textfield"/>
            <validate type="nonempty"/>
        </property>
        <property id="exif_exposureTime" name="exposureTime" niceName="exposureTime" ns="http://www.w3.org/2003/12/exif/ns#">
            <metadata type="text_textfield"/>
            <validate type="nonempty"/>
        </property>
        <property id="exif_flash" name="flash" niceName="flash" ns="http://www.w3.org/2003/12/exif/ns#">
            <metadata type="text_textfield"/>
            <validate type="nonempty"/>
        </property>
        <property id="exif_flashOnOff" name="flashOnOff" niceName="flashOnOff" ns="http://www.w3.org/2003/12/exif/ns#">
            <metadata type="text_textfield"/>
            <validate type="nonempty"/>
        </property>
        <property id="exif_fNumber" name="fNumber" niceName="fNumber" ns="http://www.w3.org/2003/12/exif/ns#">
            <metadata type="text_textfield"/>
            <validate type="nonempty"/>
        </property>
        <property id="exif_focalLength" name="focalLength" niceName="focalLength" ns="http://www.w3.org/2003/12/exif/ns#">
            <metadata type="text_textfield"/>
            <validate type="nonempty"/>
        </property>
        <property id="exif_focalLengthIn35mmFilm" name="focalLengthIn35mmFilm" niceName="focalLengthIn35mmFilm" ns="http://www.w3.org/2003/12/exif/ns#">
            <metadata type="text_textfield"/>
            <validate type="nonempty"/>
        </property>
        <property id="exif_imageLength" name="imageLength" niceName="imageLength" ns="http://www.w3.org/2003/12/exif/ns#">
            <metadata type="text_textfield"/>
            <validate type="nonempty"/>
        </property>
        <property id="exif_imageWidth" name="imageWidth" niceName="imageWidth" ns="http://www.w3.org/2003/12/exif/ns#">
            <metadata type="text_textfield"/>
