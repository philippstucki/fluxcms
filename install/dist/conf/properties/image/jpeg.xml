        </property>
        <property id="exif_whiteBalance" name="whiteBalance" niceName="whiteBalance" ns="http://www.w3.org/2003/12/exif/ns#">
            <metadata type="text_textfield"/>
            <validate type="nonempty"/>
        </property>
        
         <property id="exif_dateTimeOriginal" name="dateTimeOriginal" niceName="dateTimeOriginal" ns="http://www.w3.org/2003/12/exif/ns#">
            <metadata type="text_textfield"/>
            <validate type="nonempty"/>
        </property>

    </properties>

    <xi:include xmlns:xi="http://www.w3.org/2001/XInclude" href="../properties.xml#xmlns(prop=http://bitflux.org/propertyconfig)xpointer(/prop:bxcms/*)" parse="xml"/>
    <categories>
