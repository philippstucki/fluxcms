<?xml version="1.0"?>
<dbform:form xmlns:dbform="http://bitflux.org/dbforms2/1.0">

    <!--<dbform:javascript src="webinc/plugins/dbforms2/myfunctions.js"/>-->

    <dbform:fields table="team" onsavejs="">

        <dbform:field name="name" type="text" descr="Name">
        </dbform:field>
        
        <dbform:field name="vorname" type="text" descr="Vorname">
        </dbform:field>
        
        <dbform:field name="titel" type="text" descr="Titel">
        </dbform:field>
        
        <dbform:field name="aufgabe" type="text" descr="Aufgabe">
        </dbform:field>
        
        <dbform:field name="location" type="select" descr="Ort" default="3">
            <dbform:value name="1">Nyon</dbform:value>
            <dbform:value name="2">Arrau</dbform:value>
            <dbform:value name="3">Z&#252;rich</dbform:value>
        </dbform:field>
        
        <dbform:field name="fon" type="text" descr="Fon">
        </dbform:field>
        
        <dbform:field name="fax" type="text" descr="Fax">
        </dbform:field>
        
        <dbform:field name="mail" type="text" descr="Mail">
        </dbform:field>
        
          
    </dbform:fields>

    <dbform:chooser namefield="concat(name,' - ',vorname)" wherefields="id" limit="1000"/>    

</dbform:form>

