<?xml version="1.0"?>
<dbform:form 
    xmlns:dbform="http://bitflux.org/dbforms2/1.0"
>

    <dbform:fields table="shop_article">

        <dbform:field name="price_c1" type="number_int" descr="Price C1"/>
        <dbform:field name="price_c2" type="number_int" descr="Price C2"/>
        <dbform:field name="price_c3" type="number_int" descr="Price C3"/>
        <dbform:field name="price_c4" type="number_int" descr="Price C4"/>
        <dbform:field name="price_c5" type="number_int" descr="Price C5"/>

        <dbform:field name="weight" type="number_int" descr="Weight"/>
        <dbform:field name="issue" type="number_int" descr="Issue Nr."/>
        
        <!--<dbform:field name="status" type="checkbox" descr="Status (Enable)"/>-->
        <dbform:field name="stock" type="number_int" descr="Stock"/>

       <dbform:field name="article_description" type="relation_12n" descr="Description" thatfield="shop_article_id">
            <dbform:form name="shop_article_description">
                <dbform:field name="name"/>
                <dbform:field name="lang"/>
                <dbform:field name="description_short"/>
                <dbform:field name="description_long"/>
                <dbform:field name="image1_href"/>
                <dbform:field name="image2_href"/>
                <dbform:field name="image3_href"/>
                <dbform:field name="image4_href"/>
            </dbform:form>
        </dbform:field>

    </dbform:fields>    

</dbform:form>
