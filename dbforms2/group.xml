<?xml version="1.0"?>
<dbform:form xmlns:dbform="http://bitflux.org/dbforms2/1.0">

<!--

DROP TABLE IF EXISTS `bxcms_grouptest`;
CREATE TABLE `bxcms_grouptest` (
  `id` int(10) unsigned NOT NULL auto_increment,
  `title` varchar(255) default NULL,
  `group1` text,
  PRIMARY KEY  (`id`)
) TYPE=MyISAM AUTO_INCREMENT=10174 ;
        
-->

    <dbform:fields table="grouptest">

        <dbform:field name="title" type="text" descr="Title" ></dbform:field>

        <dbform:group name="group1" type="xml" descr="">
            <dbform:field name="description" type="text" descr="Description" ></dbform:field>
            <dbform:field name="color1" type="color" descr="Color 1"></dbform:field>
            <dbform:field name="color2" type="color" descr="Color 2"></dbform:field>
            <dbform:field name="color3" type="color" descr="Color 3"></dbform:field>
            <dbform:field name="color4" type="color" descr="Color 4"></dbform:field>

        </dbform:group>

          
    </dbform:fields>
    <dbform:chooser namefield="title" wherefields="title,group1"  limit="35"/>    

</dbform:form>

