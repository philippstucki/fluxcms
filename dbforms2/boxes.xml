<?xml version="1.0" encoding="utf-8"?>
<dbform:form xmlns:dbform="http://bitflux.org/dbforms2/1.0">
  <dbform:fields table="boxes">
    <dbform:field name="title" type="text" descr="Titel"/>
    <dbform:field name="content" type="text_wysiwyg" isxml="true" descr="Text"/>
    <dbform:field name="linktext" type="text" descr="Link-Text"/>
    <dbform:field name="link" type="text" descr="Link"/>
    <dbform:field name="lang" type="text" descr="Sprache"/>

  </dbform:fields>
  <dbform:chooser namefield="concat(title,' (',id,')')" wherefields="title" orderby="title" limit="20"/>
</dbform:form>
